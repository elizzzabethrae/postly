<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Post to the wall!</h1>

      <a href="/posts/new" class="btn btn-success">New Post</a>


      <ul class="list-group">
<!-- #1 -->
        <% posts.forEach((post) => { %>
<!-- #2 -->
          <li class="list-group-item">
            <%= post.username %>
             <%= post.body %>
          </li>
        <% }) %>
      </ul>

    </main>
  </body>
</html>
